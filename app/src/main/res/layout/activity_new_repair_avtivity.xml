<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_repair_avtivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"

    tools:context="com.jiahouse.jiahouse.Activity.new_repair_avtivity">


    <LinearLayout
        android:layout_marginBottom="1dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/title_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_marginLeft="0dp"
            android:id="@+id/new_repair_back"
            android:src="@drawable/back_normal"
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content" />
        <TextView

            android:textSize="30sp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:text="家屋家修"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       </LinearLayout>

    </LinearLayout>
//********************************************
    <LinearLayout
        android:id="@+id/new_repair_add"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:background="@color/title_color"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="53dp">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/repair_address"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="测试"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color"
            />
        <LinearLayout

            android:background="@color/title_color"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/repair_phone"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="测试"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/new_repair_addbtn"
            android:gravity="center"
            android:background="@color/title_color"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@drawable/repair_add"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <Button
                android:layout_marginLeft="2dp"
                android:textSize="20sp"
                android:textColor="@color/orange"
                android:background="@android:color/transparent"
                android:text="添加报修项"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:textColor="@color/title_color"
        android:textSize="20sp"
        android:text="提交订单"
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button" />

</RelativeLayout>
