<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_repair_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context="com.jiahouse.jiahouse.Activity.new_repair_add">

    <LinearLayout
        android:layout_marginBottom="1dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/title_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_marginLeft="0dp"
                android:id="@+id/new_repair_back"
                android:src="@drawable/back_normal"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <TextView

                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:text="添加报修项"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
//**************************************************
    <LinearLayout
        android:id="@+id/new_repair_select"
        android:background="@color/title_color"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/new_repair_place_pic"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="选择维修时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:background="@color/title_color"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/new_repair_type_pic"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="选择维修类型"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/title_color"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/new_repair_reason_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:text="选择维修故障原因"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/new_repair_cancleder"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:text="选择维修日期"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    //*******************

   <LinearLayout
       android:id="@+id/new_repair_pic"
       android:layout_below="@+id/new_repair_select"
       android:orientation="vertical"
       android:layout_marginTop="30dp"
       android:background="@color/title_color"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_marginLeft="20dp"
           android:layout_marginTop="10dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:src="@drawable/new_repair_special_pic"
               android:layout_width="40dp"
               android:layout_height="40dp" />
           <EditText
               android:textSize="20sp"
               android:layout_gravity="center"
               android:hint="输入备注信息"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </LinearLayout>
     <LinearLayout
         android:layout_marginTop="20dp"
         android:layout_marginBottom="20dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <ImageView
             android:layout_weight="1"
             android:src="@drawable/uplode_picture"
             android:layout_width="120dp"
             android:layout_height="120dp" />
         <ImageView
             android:layout_weight="1"
             android:src="@drawable/uplode_picture"
             android:layout_width="120dp"
             android:layout_height="120dp" />
         <ImageView
             android:layout_weight="1"
             android:src="@drawable/uplode_picture"
             android:layout_width="120dp"
             android:layout_height="120dp" />
     </LinearLayout>

   </LinearLayout>

    <Button
        android:layout_below="@+id/new_repair_pic"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/title_color"
        android:text="确定"
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
